@page "/Characters"
@model CharactersModel
@{
    ViewData["Title"] = "Rick and Morty Characters";
}

<h1>Rick and Morty Characters</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Species</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var character in Model.CharacterData.Characters)
        {
            <tr>
                <td>@character.Name</td>
                <td>@character.Status</td>
                <td>@character.Species</td>
            </tr>
        }
    </tbody>
</table>

    <nav aria-label="Characters Pagination">
        <ul class="pagination">
            @if (Model.CharacterData.PaginationInfo.Prev != null)
            {
                <li class="page-item">
                    <a class="page-link" href="/Characters?activepage=@Model.CharacterData.PaginationInfo.Prev">Previous</a>
                </li>
            }

            @for (var i = 1; i <= Model.CharacterData.PaginationInfo.Pages; i++)
            {
                <li class="page-item @(i == Model.CharacterData.PaginationInfo.Page ? "active" : "")">
                    <a class="page-link"  href="/Characters?activepage=@i" >@i</a>
                </li>
            }

            @if (Model.CharacterData.PaginationInfo.Next != null)
            {
                <li class="page-item">
                    <a class="page-link"  href="/Characters?activepage=@Model.CharacterData.PaginationInfo.Next">Next</a>
                </li>
            }
        </ul>
    </nav>
